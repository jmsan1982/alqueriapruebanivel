
/*
    ESTILO 1
*/
.destacados-box{
    background-color: #000;
    background-size: 100%;
    height:300px;
    max-width: 385px;
    border-bottom:3px solid #EB7C00;
    opacity: 1; /*0.8*/
    color:white;
    font-size: 1.5em;
    padding:0px 0px 0px 0px;
}

.destacados-box img{
    max-height: 210px;
    width: 100%;
}

.destacados-box img:hover{
    
}

.destacados-box h3{
    font-weight: bold;
    text-align:center;
    margin-bottom:0px;
    padding-bottom:0px;
    margin-top: 1rem;
    color: #EB7C00;
}

.destacados-box h4{
    text-align:center;
    color: white;
    margin-top: 0px;
    margin-bottom:0px;
    text-transform: uppercase;
    font-size:1.5em;
}

/*  ***************************************************************************
    ESTILO 2
*/
.destacados-box-2{
    background-color: white;
    background-size: 100%;
    height:300px;
    max-width: 385px;
    opacity: 1;
    font-size: 1.5em;
    padding:0px 0px 0px 0px;
    text-align:center;
}

.destacados-box-2 img{
    max-height: 210px;
    width: 100%;
}

.destacados-box-2 h3{
    font-weight: bold;
    text-align:center;
    margin-bottom:0px;
    padding-bottom:0px;
    margin-top: 1rem;
    color: #EB7C00;
}

.destacados-box-2 h4,.destacados-box-2 p{
    text-align:center;
    color: black;
    margin-top: 0px;
    margin-bottom:0px;
    text-transform: uppercase;
    font-size:1.5em;
    width:auto;
}

.destacados-box-2 p span{
    border-bottom:3px solid #EB7C00;
}

#page-content {
    min-height: 950px;
    margin-bottom: 3em;
}